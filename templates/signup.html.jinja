<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>FridgeNet Sign Up</title>
</head>

<body class="bg-gradient-to-r from-green-100 to-yellow-100 min-h-screen flex flex-col">

  {% include "components/navbar.html.jinja" %}

  <!-- Sign Up Section -->
  <section class="flex-grow flex items-center justify-center px-4 py-16">
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-xl p-10">

      <h1 class="text-4xl font-extrabold text-center text-green-800">
        Create Your <span class="text-yellow-500">FridgeNet</span> Account
      </h1>

      <p class="text-center text-gray-600 mt-3">
        Join the community helping reduce food waste and support neighbors in need.
      </p>

      <form method="post" class="mt-8 space-y-5">

        <!-- Name -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Full Name *</label>
          <input type="text" name="name" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" />
        </div>

        <!-- Email -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Email *</label>
          <input type="email" name="email" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" />
        </div>

        <!-- Password -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Password *</label>
          <input type="password" name="password" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" />
        </div>

        <!-- Repeat Password -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Repeat Password *</label>
          <input type="password" name="repeat_password" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" />
        </div>

        <!-- Address -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Address *</label>
          <input type="text" name="address" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" />
        </div>

        <!-- Birthdate -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Birthdate *</label>
          <input type="date" name="birthdate" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-400" />
        </div>

        <!-- Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <button type="reset"
            class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 rounded-xl transition">
            Reset
          </button>

          <button type="submit"
            class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-xl shadow-md transition">
            Create Account
          </button>
        </div>

        <!-- Login Link -->
        <p class="text-center text-sm text-gray-600 pt-4">
          Already have an account?
          <a href="/login" class="text-green-700 font-semibold hover:underline">Sign in</a>
        </p>

      </form>
    </div>
  </section>

  {% include "components/footer.html.jinja" %}

</body>

</html>
