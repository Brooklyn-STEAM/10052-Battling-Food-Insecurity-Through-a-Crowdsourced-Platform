<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>FridgeNet Login</title>
</head>

<body class="bg-gradient-to-r from-green-100 to-orange-100 min-h-screen flex flex-col">

  {% include "components/navbar.html.jinja" %}

  <!-- Login Section -->
  <section class="flex-grow flex items-center justify-center px-4 py-16">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl p-10">

      <h1 class="text-4xl font-extrabold text-center text-green-800">
        Welcome Back to <span class="text-orange-500">FridgeNet</span>
      </h1>

      <p class="text-center text-gray-600 mt-3">
        Sign in to find nearby community fridges and support your community.
      </p>

      <form method="post" class="mt-8 space-y-5">

        <!-- Email -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Email *</label>
          <input type="email" name="email" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
        </div>

        <!-- Password -->
        <div>
          <label class="block font-semibold text-gray-700 mb-1">Password *</label>
          <input type="password" name="password" required
            class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
        </div>

        <!-- Login Button -->
        <button type="submit"
          class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 rounded-xl shadow-md transition">
          Sign In
        </button>

        <!-- Signup Link -->
        <p class="text-center text-sm text-gray-600 pt-2">
          Donâ€™t have an account?
          <a href="/signup" class="text-green-700 font-semibold hover:underline">Create one</a>
        </p>

      </form>
    </div>
  </section>

  {% include "components/footer.html.jinja" %}

</body>

</html>